# Production Environment Configuration for Railway
# Copy this to .env and fill in your production values

# Server Configuration
PORT=8080
NODE_ENV=production

# Database - Use MongoDB Atlas for production
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/hallucination-detect

# JWT Configuration - Use a strong secret in production
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d

# AI Model Configuration - Use your deployed model URL
AI_MODE=live
AI_BASE_URL=https://your-model-server.render.com
AI_TIMEOUT_MS=30000

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Google OAuth
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# CORS Configuration - Your Vercel frontend URL
CORS_ORIGIN=https://your-frontend.vercel.app

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
