# Production Environment Configuration for Render
# Copy this to .env and fill in your production values

# Server Configuration
HOST=0.0.0.0
PORT=8000
ENVIRONMENT=production

# Model Configuration
NLI_MODEL_NAME=microsoft/deberta-v3-base-mnli
EMBEDDING_MODEL_NAME=all-MiniLM-L6-v2
SPACY_MODEL=en_core_web_sm

# Performance Configuration
MAX_WORKERS=4
TIMEOUT=30
LOG_LEVEL=warning

# CORS Configuration - Your deployed frontend and backend URLs
ALLOWED_ORIGINS=https://your-frontend.vercel.app,https://your-backend.railway.app
